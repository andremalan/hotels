datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
  // namespace = "PrismaJson"
  // clientOutput = "<finds it automatically>"
  // (./ -> relative to schema, or an importable path to require() it)
}

// Saving things by supplier will give us a lot more flexibility
// over when/how to merge.
model SupplierHotel {
  id            String    @id @default(cuid())
  hotelId       String
  supplierId    Int
  trustScore    Int
  name          String
  description   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  /// [SupplierHotelData]
  data          Json

  @@index([id])
  @@index([supplierId])

}

model Hotel {
  id            String    @id @default(cuid())
  destinationId Int
  name          String
  description   String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  /// [HotelData]
  data          Json

  @@index([id])
  @@index([destinationId])
}

